<div class="container">
<h3 class="text-center p-5">コメント一覧</h3>
<% if flash[:notice] %>
    <div class="alert alert-success text-center">
        <%= flash[:notice] %>
    </div>
<% end %>

<% @posts.each do |post| %>
    <div class="d-flex justify-content-between align-items-center">
        <div class="p-2">
            <%= post.content %>
        </div>
        <div class="p-2">
            <button class="btn btn-primary"><%= link_to("編集","/test/#{post.id}/edit") %></button>
            <button class="btn btn-danger"><%= link_to("削除","/test/#{post.id}/destroy",method: post,data: {confirm: "コメントを削除します\nよろしいですか？"}) %></button>
        </div>
    </div>
    <hr>
<% end %>
<%= paginate @posts %>

</div>
